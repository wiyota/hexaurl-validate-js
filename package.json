{
  "name": "hexaurl-validate",
  "version": "0.1.0",
  "description": "Validation library for HexaURL strings with configurable rules",
  "author": {
    "name": "Inomoto, Yota",
    "email": "yota@perforate.org"
  },
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/perforate-org/hexaurl-validate-js.git"
  },
  "bugs": {
    "url": "https://github.com/perforate-org/hexaurl-validate-js/issues"
  },
  "homepage": "https://perforate-org.github.io/hexaurl-validate-js/",
  "keywords": [
    "validation",
    "url",
    "hexaurl",
    "string-validation",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./zod": {
      "types": "./dist/zod/index.d.ts",
      "import": "./dist/zod/index.mjs",
      "require": "./dist/zod/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "5 KB"
    }
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "doc": "typedoc",
    "size": "size-limit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "size-limit": "^11.1.6",
    "tsup": "^8.3.6",
    "typedoc": "^0.27.7",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "zod": "^3.0.0"
  }
}
